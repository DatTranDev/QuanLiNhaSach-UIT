<Window x:Class="QuanLiNhaSach.View.Admin.ProductsManager.Import_products"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLiNhaSach.View.Admin.ProductsManager"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Import_products"
        Width="1130"
        Height="660"
        Background="Transparent"
        AllowsTransparency="True"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        TextElement.FontSize="13"
        TextElement.FontWeight="Regular"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Resources>
        <ControlTemplate x:Key="TextBoxAdd"
                         TargetType="TextBox">
            <TextBox Width="224"
                     Height="48"
                     Margin="0,0,0,0"
                     Padding="12,2.4"
                     HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="24"
                     Background="#D9D9D9"
                     BorderThickness="0.5"
                     FontFamily="Inter"
                     FontSize="16" />
        </ControlTemplate>
        <ControlTemplate x:Key="TextBoxAddBig"
                         TargetType="TextBox">
            <TextBox Width="196"
                     Height="157"
                     Margin="0,5,0,0"
                     Padding="12,2.4"
                     MinLines="1"
                     MaxLines="20"
                     TextWrapping="Wrap"
                     HorizontalAlignment="Left"
                     VerticalContentAlignment="Top"
                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="24"
                     Background="#D9D9D9"
                     BorderThickness="0.5"
                     FontFamily="Inter"
                     FontSize="16"
                     VerticalAlignment="Top" />
        </ControlTemplate>
        <Style x:Key="TextBlock"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="FontSize"
                    Value="19.2" />
            <Setter Property="FontWeight"
                    Value="Bold" />

        </Style>
    </Window.Resources>
    <Border>
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,1"
                                 StartPoint="0.5,0">
                <GradientStop Color="Black"
                              Offset="0.888" />
                <GradientStop Color="White"
                              Offset="0" />
                <GradientStop Color="#FE0E0E0E"
                              Offset="0.667" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <StackPanel Background="White">
            <Border Width="144"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="#EA9F2D"
                    BorderBrush="#E0AE8A"
                    CornerRadius="15"
                    Height="50"
                    Margin="0,20,50,0">
                <Button Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Foreground="{x:Null}"
                        Command="{Binding AddSanPhamCM}">
                    <StackPanel Width="144"
                                Orientation="Horizontal">
                        <Image Width="20"
                               Margin="10,0,10,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Source="/QuanLiNhaSach;component/Resources/Icon/Excel_White_Icon.png" />
                        <TextBlock Width="96"
                                   Margin="0,2,0,0"
                                   VerticalAlignment="Center"
                                   Panel.ZIndex="1"
                                   FontFamily="Roboto Condensed"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Text="File Excel"></TextBlock>
                    </StackPanel>
                </Button>
            </Border>
            <Border Width="1000" Margin="0,20,0,0">
                <StackPanel>
                    <Border Height="40"
                            Background="#FFF2E9">
                        <TextBlock Foreground="#E0AE8A"
                                   FontSize="30"
                                   HorizontalAlignment="Center">
                        Phiếu nhập sách
                        </TextBlock>
                    </Border>
                    <Border Height="35">
                        <TextBlock Text="Ngày nhập: ...."
                                   HorizontalAlignment="Center"
                                   FontSize="25">
                        </TextBlock>
                    </Border>
                    <Grid Height="400">

                        <DataGrid x:Name="dataGrid"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  IsReadOnly="False"
                                  
                                  ItemsSource="{Binding Books}"
                                 >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="STT"
                                                    Binding="{Binding Path=STT}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Sách"
                                                    Binding="{Binding Path=BookName}"
                                                    IsReadOnly="False"/>
                                <DataGridTextColumn Header="Thể loại"
                                                    Binding="{Binding Path=Category}" />
                                <DataGridTextColumn Header="Tác giả"
                                                    Binding="{Binding Path=Author}" />
                                <DataGridTextColumn Header="Số lượng"
                                                    Binding="{Binding Path=Quantity}" />
                                <DataGridTextColumn Header="Đơn giá nhập"
                                                    Binding="{Binding Path=UnitPrice}" />
                                <DataGridTextColumn Header="Link ảnh"
                                                    Binding="{Binding Path=ImageLink}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Button Command="{Binding AddSanPhamListCM}"
                            CommandParameter="{Binding ElementName=AddSPPage}"
                            Width="160"
                            Height="62"
                            Margin="0,15,25,0"
                            HorizontalAlignment="Right"
                            materialDesign:ButtonAssist.CornerRadius="24"
                            Background="#F0BD70"
                            BorderThickness="0"
                            Content="Nhập kho"
                            FontSize="24"
                            FontWeight="Bold" />
                </StackPanel>


            </Border>
        </StackPanel>
    </Border>
</Window>