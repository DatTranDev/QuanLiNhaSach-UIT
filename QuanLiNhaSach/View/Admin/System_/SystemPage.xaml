                                            <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="17.6"
                                            Text="{Binding Quantity}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
